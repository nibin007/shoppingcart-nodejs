<section>
    <div class="container mt-4">
        <div class="row">
     <div class="col-md-6">
         <h2 class="text-center">Edit Product</h2>
         <form action="/admin/updateproduct/{{product._id}}" enctype="multipart/form-data" method="POST">
         <label for="">name</label>
         <input type="text" name="name" value="{{product.name}}" class="form-control">
         <label for="">price</label>
         <input type="number" name="price" value="{{product.price}}" class="form-control">
         <label for="">description</label>
         <input type="text" name="description" value="{{product.description}}" class="form-control">
         <label for="">category</label>
         <input type="text" name="category" value="{{product.category}}" class="form-control">
         <label  for="">Image</label>
         <img src="/productimages/{{product._id}}.jpg"  alt="" id="imageid" style="width:100px; height:auto">
         <input type="file" class="form-control"  name="filess" onchange="viewImage(event)">
         <button type="submit"  class="btn btn-success mt-4">submit</button>
         </form>

     </div>
     <script>
         function viewImage(event){
             document.getElementById('imageid').src=URL.createObjectURL(event.target.files[0])         }
     </script>