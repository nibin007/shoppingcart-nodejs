    <section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3" >
                <div class="card" style="width: 15rem height:24rem;">
  <img class="card-img-top" src="/productimages/{{this._id}}.jpg" alt="Card image cap" style="height:13rem;"> 
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <p class="card-text">RS.{{this.price}}</p>
    <p class="card-text">{{this.description}}</p>
    <button  onclick="addtocart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
  </div>
</div>
            </div>  
            {{/each}}         
        </div>
    </div>
    </section>
  
  </body>

</html>
